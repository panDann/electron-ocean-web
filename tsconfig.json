{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "react",
    "experimentalDecorators":true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@src/*":["src/*"],
      "@config":["config/*"],
      "~images/*":["src/assets/images/*"],
      
    }
  },
  "include": [
    "src/**/*"
  ]
}
